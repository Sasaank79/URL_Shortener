{
  "name": "URL Shortener",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "forwardPorts": [
    8080,
    5433,
    6379
  ],
  "portsAttributes": {
    "8080": {
      "label": "URL Shortener API",
      "onAutoForward": "notify"
    },
    "5433": {
      "label": "PostgreSQL"
    },
    "6379": {
      "label": "Redis"
    }
  },
  "postCreateCommand": "chmod +x mvnw && ./mvnw dependency:go-offline -q",
  "postStartCommand": "docker compose up -d && sleep 20 && ./mvnw spring-boot:run",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "java.compile.nullAnalysis.mode": "automatic"
      }
    }
  }
}